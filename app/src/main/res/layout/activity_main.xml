<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.app.MainActivity">

    <EditText
        android:id="@+id/input_first_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:maxLength="13"
        android:maxLines="1" />

    <EditText
        android:id="@+id/input_second_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:maxLength="13"
        android:maxLines="1" />

    <RadioGroup
        android:id="@+id/r_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:textAlignment="center">

        <RadioButton
            android:id="@+id/soma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soma"
            android:textAlignment="inherit"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Divisão"
            android:textAlignment="inherit"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtração"
            android:textAlignment="inherit"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/mult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multiplicação"
            android:textAlignment="inherit"
            android:textSize="11sp" />

        <RadioButton
            android:id="@+id/porcent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textAlignment="inherit"
            android:textSize="12sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/result_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:textAlignment="center"
        android:textSize="5mm" />

    <Button

        android:id="@+id/btn_operation"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="Realizar Operação" />
    <Button

        android:id="@+id/btn_limp"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Limpar" />

</LinearLayout>
